<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/feed_cover"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="48dp"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/feed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="32dp"
            android:text="@string/title"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/feed_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="16dp"
            android:text="@string/author"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/feed_like"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="16dp"
                android:button="@drawable/select_like_32dp"
                />

            <ImageButton
                android:id="@+id/feed_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="16dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:src="@drawable/ic_profile_black_24dp"
                android:scaleType="center"/>

        </LinearLayout>


        <com.arges.sepan.argmusicplayer.PlayerViews.ArgPlayerSmallView
            android:id="@+id/feed_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

    </LinearLayout>

</RelativeLayout>